<%- if devise_mapping.omniauthable? %>
  <div>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider) do %>
        <%- if provider.to_s == "google_oauth2" %>
          <% provider = "google plus" %>
        <% end %>
        <button class="<%= provider %> waves-effect waves-light btn" style="width:100%; margin-bottom:5px;">
          <% if provider.to_s == "facebook" %>
          <i class="fa fa-<%= provider %>-official"></i>
            <% sns = '페이스북' %>
          <% elsif provider.to_s == "google plus" %>
          <i class="fa fa-<%= provider %>-official"></i>
            <% sns = '구글' %>
          <% else %>
          <i class="fa fa-comment"></i>
            <% sns = '카카오' %>
          <% end %>
          <%= sns %> 계정으로 로그인
        </button>
      <% end -%>
    <% end -%>
  </div>
<% end -%>

<%- if controller_name != 'sessions' %>
  <%= link_to "로그인", new_session_path(resource_name), :class=> 'waves-effect waves-light btn grey darken-1', :style=> "width:100%;margin-bottom:5px;" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "회원가입", new_registration_path(resource_name), :class=> 'waves-effect waves-light btn grey darken-1', :style=> "width:100%;margin-bottom:5px;"%><br />
<% end -%>

