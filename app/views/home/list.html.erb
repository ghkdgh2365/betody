<div class="container">
<h3>각서 목록</h3>
  <div class="row">
    <% if user_signed_in? %>
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s4"><a class="active" href="#test1">미완료</a></li>
        <li class="tab col s4"><a href="#test2">성공</a></li>
        <li class="tab col s4"><a href="#test4">실패</a></li>
      </ul>
    </div>
    <div id="test1" class="col s12">
        <div class="row">
          <% @posts.each do |p| %>
            <% if p.deletable_by? current_user %>
              <div class="col s12 m6">
                <%= link_to(home_show_path(id: p.id), :style => "font-size:20px;display:block;color:white;")  do %>
                  <div class="card hoverable" style="background-color:#eb5c62;">
                    <div class="card-content">
                            <span class="truncate"><%= p.title %></span>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
    <div id="test2" class="col s12">
      <div class="row">
        <% @success_posts.each do |p| %>
          <% if p.deletable_by? current_user %>
            <div class="col s12 m6">
              <%= link_to(home_show_path(id: p.id), :style => "font-size:20px;display:block;color:white;")  do %>
                <div class="card light-blue darken-1 hoverable">
                  <div class="card-content">
                    <span class="truncate"><%= p.title %></span>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div id="test4" class="col s12">
      <div class="row">
        <% @fail_posts.each do |p| %>
          <% if p.deletable_by? current_user %>
            <div class="col s12 m6">
              <%= link_to(home_show_path(id: p.id), :style => "font-size:20px;display:block;color:white;")  do %>
                <div class="card blue-grey darken-1 hoverable">
                  <div class="card-content">
                          <span class="truncate"><%= p.title %></span>
                    <!--<%= link_to(home_destroy_path(id: p.id), method: :delete, :class=> "",data: { confirm: "삭제하시겠습니까?" }, :style=> "") do%>-->
                    <!--    <i class="small material-icons" style="font-size:2.5rem;">delete</i>-->
                    <!--<% end %>-->
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="fixed-action-btn" style="bottom: 45px;right: 24px;">
    <a class="btn-floating btn-large red pulse" href="/home/new"><i class="material-icons">mode_edit</i></a>
  </div>
</div>
<style>
      @import url(//fonts.googleapis.com/earlyaccess/hanna.css);
      .fixed-action-btn{
        position: fixed;
        padding-top: 15px;
        margin-bottom: 0;
        z-index: 997;
      }
      h3{
        text-align:center;
        font-family: 'Hanna', fantasy;
      }
</style>
<script>
  $(document).ready(function(){
      var originUrl = window.location.origin
      var realUrl = originUrl+"/home/list"
      var URL = location.href;
      if (URL != realUrl){
        location.href = "/home/list"
      }
    $('ul.tabs').tabs();
  });
</script>