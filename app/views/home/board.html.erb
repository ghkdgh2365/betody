<div class="container">
  <h3 class="hanna">공지사항</h3>
  <ul class="collection with-header">
    <% @boards.each do |b| %>
        <li class="collection-item">
            <div>
              <a href="/home/show_board/<%=b.id%>"><%=b.title%></a>
              <% if user_signed_in? %>
                  <% if user_roles(current_user) == 'Admin' %>
                      <%= link_to(home_destroy_board_path(id: b.id), method: :delete, :class=> "secondary-content",data: { confirm: "삭제하시겠습니까?" }) do%>
                        <i class="material-icons">delete</i>
                      <% end %>
                  <% end %>
              <% end %>
            </div>
        </li>
    <% end %>
  </ul>
  <% if user_signed_in? %>
      <% if user_roles(current_user) == 'Admin' %>
          <a href="/home/new_board" class="waves-effect waves-light btn">공지사항 작성하기</a>
      <% end %>
  <% end %>
  <div class="fixed-action-btn" style="bottom: 45px;right: 24px;">
    <a class="btn-floating btn-large red pulse" href="/home/new"><i class="material-icons">mode_edit</i></a>
  </div>
</div>

<style>
      @import url(//fonts.googleapis.com/earlyaccess/hanna.css);
      .fixed-action-btn{
        position: fixed;
        padding-top: 15px;
        margin-bottom: 0;
        z-index: 997;
      }
      h3{
        text-align:center;
        font-family: 'Hanna', fantasy;
      }
</style>