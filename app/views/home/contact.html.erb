<div class="container">
  <div class="row">
    <form class="col s12" action="/home/create_contact/<%=@post.id%>" method="post">
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" type="text" class="validate" name="username" value="<%=@post.my_name %>" required>
          <label for="icon_prefix">이름</label>
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix">phone</i>
          <input id="icon_telephone" type="tel" class="validate" name="tel_number" required>
          <label for="icon_telephone">핸드폰 번호</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action" style="width:100%;">무통장입금
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
</div>
